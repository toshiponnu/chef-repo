[user]
    name = <%= node['git']['username'] %>
    email = <%= node['git']['email'] %>
[core]
    editor = vim 
    pager = less 
[push]
    default = tracking
[alias]
    co = checkout
    st = status
    ci = commit
    br = branch
    di = diff
    up = pull
    pull = pull --rebase
    ls = log --stat
    lp = log -p
    lg = log --graph --date=short --pretty=format:'%Cgreen%h %cd %Cblue%cn %Creset%s'
    lga = log --graph --all --color --pretty='%x09%h %cn%x09%s %Cred%d%Creset'
[color]
    ui = auto
[url "https://"]
    insteadOf = git://
